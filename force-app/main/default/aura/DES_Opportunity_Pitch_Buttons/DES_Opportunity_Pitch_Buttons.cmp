<aura:component
    implements="force:lightningQuickActionWithoutHeader,force:hasSObjectName,force:hasRecordId,lightning:availableForFlowScreens"
    access="global">
    <aura:attribute name="AddOpportunity" type="Boolean" default="false" access="global"/>
    <aura:attribute name="NewOpportunity" type="Boolean" default="false" access="global"/>
    <div class="slds-align_absolute-center">
        <lightning:button aura:id="NEXT" label="Add Opportunity" variant="neutral"
            class="slds-button slds-button_neutral" onclick="{!c.addOpportunity}" />
        <lightning:button aura:id="NEXT" label="New Opportunity" variant="brand" class="slds-button slds-button_brand"
            onclick="{!c.newOpportunity}" />
    </div>
</aura:component>